{
	"name": "RollyRolling",
	"updateRemoteUserUID": false,
	"postCreateCommand": ".devcontainer/onCreate.zsh",
	"updateContentCommand": "sudo apt update && sudo apt upgrade -y",
	
	"mounts": [
		"source=${localWorkspaceFolder}/.devcontainer/zsh_history,target=/home/ubuntu/.cache/zsh/history,type=bind",
		"source=/home/georg/.ssh/,target=/home/ubuntu/.ssh/,type=bind",
		"source=/home/georg/.gitconfig,target=/home/ubuntu/.gitconfig,type=bind"
	],
	"workspaceMount": "source=${localWorkspaceFolder}/,target=/home/ubuntu/stream/,type=bind",
	"workspaceFolder": "/home/ubuntu/stream/",

	"forwardPorts": [7474],
	
    "build": {
        "dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack",
				"Gruntfuggly.todo-tree",
				"ms-python.python"
			]
		}
	}
}
