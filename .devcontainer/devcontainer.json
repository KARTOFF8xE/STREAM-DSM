{
	"name": "HumbliHumble",
	"updateRemoteUserUID": false,
	"postStartCommand": ".devcontainer/onStart.zsh",
	"postCreateCommand": ".devcontainer/onCreate.zsh",
	
	"mounts": ["source=${localWorkspaceFolder}/.devcontainer/zsh_history,target=/home/Georg/.cache/zsh/history,type=bind"],
	
    "build": {
        "dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack",
				"Gruntfuggly.todo-tree"
			]
		}
	}
}
