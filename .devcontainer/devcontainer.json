{
	"name": "RollyRolling",
	"updateRemoteUserUID": false,
	"postCreateCommand": ".devcontainer/onCreate.zsh",
	
	"mounts": [
		"source=${localWorkspaceFolder}/.devcontainer/zsh_history,target=/home/Georg/.cache/zsh/history,type=bind",
		"source=/home/georg/.ssh/,target=/home/Georg/.ssh/,type=bind"
	],
	"forwardPorts": [7474],
	
    "build": {
        "dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack",
				"Gruntfuggly.todo-tree",
				"ms-python.python"
			]
		}
	}
}
