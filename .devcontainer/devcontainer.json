{
	"name": "RollyRolling",

	// "build": {	// due to Docker Compose
	// "dockerfile": "Dockerfile"
	// },
	// "workspaceMount": "source=${localWorkspaceFolder}/,target=/home/ubuntu/stream/,type=bind", // due to Docker Compose

	"dockerComposeFile": "docker-compose.yml",
	"service": "devcontainer",
	"workspaceFolder": "/home/ubuntu/stream/",
	"shutdownAction": "stopCompose",
	// "runServices": [ "devcontainer" ],
	
	"mounts": [
		"source=${localWorkspaceFolder}/.devcontainer/zsh_history,target=/home/ubuntu/.cache/zsh/history,type=bind",
		"source=/home/georg/.ssh/,target=/home/ubuntu/.ssh/,type=bind",
		"source=/home/georg/.gitconfig,target=/home/ubuntu/.gitconfig,type=bind"
	],
	
		"updateRemoteUserUID": false,
		"postCreateCommand": ".devcontainer/onCreate.zsh",
		"updateContentCommand": "sudo apt update && sudo apt upgrade -y",
	
	"forwardPorts": [7474, 8086],
	
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack",
				"Gruntfuggly.todo-tree",
				"ms-python.python"
			]
		}
	}
}
